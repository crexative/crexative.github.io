---
const brandName = "CREXATIVE";
---

<!doctype html>
<html lang="en" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{brandName} - Software Agency</title>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
		<script>
			// Check for saved theme preference or default to light theme
			const savedTheme = localStorage.getItem('theme') || 'light';
			document.documentElement.setAttribute('data-theme', savedTheme);
			
			// Listen for theme toggle events
			document.addEventListener('themeToggle', (e) => {
				const newTheme = e.detail.theme;
				document.documentElement.setAttribute('data-theme', newTheme);
				localStorage.setItem('theme', newTheme);
			});
		</script>
	</body>
</html>

<style is:global>
	:root {
		/* Common variables */
		--primary-color: #00e1c7;
		
		/* Light theme (default) */
		--bg-color: #f5f5f5;
		--text-color: #222222;
		--text-gray: #555555;
		--navbar-bg: rgba(245, 245, 245, 0.9);
		--footer-bg: rgba(245, 245, 245, 0.9);
		--border-color: rgba(0, 0, 0, 0.1);
	}

	/* Dark theme */
	[data-theme="dark"] {
		--bg-color: #0a0a0a;
		--text-color: #ffffff;
		--text-gray: #aaaaaa;
		--navbar-bg: rgba(10, 10, 10, 0.8);
		--footer-bg: rgba(10, 10, 10, 0.9);
		--border-color: rgba(255, 255, 255, 0.05);
	}

	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100%;
		font-family: 'Poppins', sans-serif;
		background-color: var(--bg-color);
		color: var(--text-color);
		overflow-x: hidden;
	}

	* {
		box-sizing: border-box;
	}

	img {
		max-width: 100%;
	}

	a {
		text-decoration: none;
		color: inherit;
	}

	h1, h2, h3, h4, h5, h6 {
		margin: 0;
	}

	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.primary-color {
		color: var(--primary-color);
	}
</style>
