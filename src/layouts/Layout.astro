---
/**
 * Base Layout Component
 * Provides the main HTML structure with SEO optimization
 * Following Single Responsibility Principle (SRP)
 */

import { getLangFromUrl, useTranslations } from '../i18n/i18n.config';
import { generateOrganizationSchema, getOGLocale, getLanguageName } from '../utils/seo.utils';
import { SITE_CONFIG, SEO_CONFIG } from '../config/site.config';
import { THEME } from '../constants/theme.constants';
import type { SEOProps } from '../types/common.types';

export type Props = SEOProps;

const currentLang = Astro.props.lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const {
	title = t('seo.title'),
	description = t('seo.description'),
	keywords = t('seo.keywords'),
	image = SEO_CONFIG.defaultImage,
	canonical = Astro.url.href
} = Astro.props;

const structuredData = generateOrganizationSchema(description);
const ogLocale = getOGLocale(currentLang);
const languageName = getLanguageName(currentLang);
---

<!doctype html>
<html lang={currentLang} data-theme={THEME.LIGHT}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="robots" content="index, follow" />
		<meta name="language" content={languageName} />
		<meta name="author" content={SITE_CONFIG.author} />
		<link rel="canonical" href={canonical} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image} />
		<meta property="og:site_name" content={SITE_CONFIG.name} />
		<meta property="og:locale" content={ogLocale} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonical} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={image} />
		<meta property="twitter:creator" content={SEO_CONFIG.twitterHandle} />

		<!-- Additional SEO Meta Tags -->
		<meta name="geo.region" content={SEO_CONFIG.geo.region} />
		<meta name="geo.placename" content={SEO_CONFIG.geo.placename} />

		<!-- Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(structuredData)} is:inline />

		<!-- DNS Prefetch for external resources -->
		<link rel="dns-prefetch" href="//fonts.googleapis.com">
		<link rel="dns-prefetch" href="//fonts.gstatic.com">

		<!-- Preconnect to critical third-party origins -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

		<!-- Enhanced typography with modern font combination -->
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet" onload="this.media='all'">
		<noscript><link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet"></noscript>

		<!-- Preload critical resources -->
		<link rel="preload" href="/images/hero.jpg" as="image" type="image/jpeg">
		<link rel="preload" href="/images/crexative.svg" as="image" type="image/svg+xml">
		<link rel="preload" href="/favicon.svg" as="image" type="image/svg+xml">

		<!-- Resource hints for better loading -->
		<link rel="prefetch" href="/images/about.png">

		<!-- Performance optimization meta tags -->
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="format-detection" content="telephone=no">
		<meta name="theme-color" content="#00e1c7">
		<meta name="msapplication-TileColor" content="#00e1c7">
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

		<!-- Manifest for PWA capabilities -->
		<link rel="manifest" href="/manifest.json">
	</head>
	<body>
		<slot />
		<script>
			import { THEME, THEME_STORAGE_KEY } from '../constants/theme.constants';

			// Check for saved theme preference or default to light theme
			const savedTheme = localStorage.getItem(THEME_STORAGE_KEY) || THEME.LIGHT;
			document.documentElement.setAttribute('data-theme', savedTheme);

			// Listen for theme toggle events
			document.addEventListener('themeToggle', (e) => {
				const newTheme = (e as CustomEvent).detail.theme;
				document.documentElement.setAttribute('data-theme', newTheme);
				localStorage.setItem(THEME_STORAGE_KEY, newTheme);
			});
		</script>
	</body>
</html>

<style is:global>
	:root {
		/* Enhanced color palette */
		--primary-color: #00e1c7;
		--secondary-color: #6366f1;
		--accent-color: #f59e0b;
		--success-color: #10b981;
		--gradient-primary: linear-gradient(135deg, #00e1c7 0%, #6366f1 100%);
		--gradient-accent: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);

		/* Light theme (default) */
		--bg-color: #ffffff;
		--bg-secondary: #f8fafc;
		--bg-tertiary: #f1f5f9;
		--text-color: #1e293b;
		--text-secondary: #475569;
		--text-gray: #64748b;
		--text-light: #94a3b8;
		--navbar-bg: rgba(255, 255, 255, 0.95);
		--footer-bg: #1e293b;
		--border-color: rgba(0, 0, 0, 0.08);
		--shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
		--shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
		--shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
		--shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1);
	}

	/* Dark theme */
	[data-theme="dark"] {
		--bg-color: #0a0a0a;
		--bg-secondary: #1a1a1a;
		--bg-tertiary: #2a2a2a;
		--text-color: #ffffff;
		--text-secondary: #e2e8f0;
		--text-gray: #a0aec0;
		--text-light: #718096;
		--navbar-bg: rgba(10, 10, 10, 0.8);
		--footer-bg: rgba(10, 10, 10, 0.9);
		--border-color: rgba(255, 255, 255, 0.1);
		--shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.3);
		--shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.4);
		--shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.4);
		--shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.5);
	}

	/* Dark mode button fixes - Global styles */
	[data-theme="dark"] .btn-secondary:hover {
		background-color: #e2e8f0 !important;
		color: #000000 !important;
		border-color: #00e1c7 !important;
		transform: translateY(-2px) !important;
		box-shadow: 0 8px 20px rgba(0, 225, 199, 0.3) !important;
	}

	[data-theme="dark"] .btn-secondary {
		color: #e2e8f0 !important;
		border-color: #e2e8f0 !important;
		background-color: transparent !important;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100%;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		background-color: var(--bg-color);
		color: var(--text-color);
		overflow-x: hidden;
		font-display: swap;
		text-rendering: optimizeLegibility;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		line-height: 1.6;
		letter-spacing: -0.01em;
	}

	/* Enhanced typography hierarchy */
	h1, h2, h3, h4, h5, h6 {
		font-family: 'Playfair Display', serif;
		font-weight: 600;
		line-height: 1.2;
		letter-spacing: -0.02em;
		margin: 0;
		color: var(--text-color);
	}

	h1 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 700;
	}

	h2 {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 600;
	}

	h3 {
		font-size: clamp(1.5rem, 3vw, 2rem);
		font-weight: 600;
	}

	/* Performance optimizations */
	* {
		box-sizing: border-box;
	}

	/* Improve scrolling performance */
	html {
		scroll-behavior: smooth;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}

		*,
		*::before,
		*::after {
			animation-duration: 0.01ms !important;
			animation-iteration-count: 1 !important;
			transition-duration: 0.01ms !important;
		}
	}

	img {
		max-width: 100%;
	}

	a {
		text-decoration: none;
		color: inherit;
	}

	h1, h2, h3, h4, h5, h6 {
		margin: 0;
	}

	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.primary-color {
		color: var(--primary-color);
	}
</style>
