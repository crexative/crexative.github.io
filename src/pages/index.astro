---
/**
 * Homepage (Spanish - Default)
 * Main landing page in Spanish
 */

import Layout from '../layouts/Layout.astro';
import Navbar from '../components/layout/Navbar.astro';
import Hero from '../components/sections/Hero.astro';
import Services from '../components/sections/Services.astro';
import ProjectShowcase from '../components/sections/ProjectShowcase.astro';
import Contact from '../components/sections/Contact.astro';
import Footer from '../components/layout/Footer.astro';
import StickyCallToAction from '../components/sections/StickyCallToAction.astro';
import { useTranslations } from '../i18n/i18n.config';
import { SITE_CONFIG } from '../config/site.config';
import { getCanonicalUrl } from '../utils/url.utils';

const lang = SITE_CONFIG.defaultLanguage;
const t = useTranslations(lang);

// SEO-optimized meta data for Spanish homepage
const pageTitle = t('seo.title');
const pageDescription = t('seo.description');
const pageKeywords = t('seo.keywords');
---

<Layout
	title={pageTitle}
	description={pageDescription}
	keywords={pageKeywords}
	image={`${SITE_CONFIG.url}/images/crexative-og.png`}
	canonical={getCanonicalUrl('/')}
	lang={lang}
>
	<Navbar brandName={SITE_CONFIG.name} lang={lang} />
	<Hero lang={lang} />
	<Services lang={lang} />
	<ProjectShowcase lang={lang} />
	<Contact lang={lang} />
	<Footer lang={lang} />
	<StickyCallToAction lang={lang} />
</Layout>
