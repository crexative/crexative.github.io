---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/layout/Navbar.astro';
import Footer from '../components/layout/Footer.astro';
import { useTranslations } from '../i18n';
import { SITE_CONFIG } from '../config/site.config';

const lang = SITE_CONFIG.defaultLanguage;
const t = useTranslations(lang);
---

<Layout
  title={`${t('legal.deleteData.title')} | ${SITE_CONFIG.name}`}
  description={t('legal.deleteData.metaDescription')}
  lang={lang}
>
  <Navbar brandName={SITE_CONFIG.name} lang={lang} />

  <main id="main-content" class="legal-page">
    <div class="container">
      <article class="legal-content">
        <header class="legal-header">
          <h1>{t('legal.deleteData.title')}</h1>
          <p class="last-updated">{t('legal.lastUpdated')}</p>
        </header>

        <p class="intro">{t('legal.deleteData.intro')}</p>

        <section class="legal-section">
          <h2>{t('legal.deleteData.section1.title')}</h2>
          <p>{t('legal.deleteData.section1.content')}</p>
        </section>

        <section class="legal-section">
          <h2>{t('legal.deleteData.section2.title')}</h2>
          <p>{t('legal.deleteData.section2.content')}</p>
          <ol class="steps-list">
            <li>{t('legal.deleteData.section2.step1')}</li>
            <li>{t('legal.deleteData.section2.step2')}</li>
            <li>{t('legal.deleteData.section2.step3')}</li>
            <li>{t('legal.deleteData.section2.step4')}</li>
          </ol>
        </section>

        <section class="legal-section">
          <h2>{t('legal.deleteData.section3.title')}</h2>
          <p>{t('legal.deleteData.section3.content')}</p>
          <ul>
            <li>{t('legal.deleteData.section3.item1')}</li>
            <li>{t('legal.deleteData.section3.item2')}</li>
            <li>{t('legal.deleteData.section3.item3')}</li>
          </ul>
        </section>

        <section class="legal-section info-box">
          <h2>{t('legal.deleteData.section4.title')}</h2>
          <p>{t('legal.deleteData.section4.content')}</p>
          <ul>
            <li>{t('legal.deleteData.section4.item1')}</li>
            <li>{t('legal.deleteData.section4.item2')}</li>
            <li>{t('legal.deleteData.section4.item3')}</li>
          </ul>
        </section>

        <section class="legal-section">
          <h2>{t('legal.deleteData.section5.title')}</h2>
          <p>{t('legal.deleteData.section5.content')}</p>
          <p class="contact-info">{t('legal.deleteData.section5.email')}</p>
          <p class="contact-info">{t('legal.deleteData.section5.website')}</p>
        </section>

        <div class="cta-box">
          <h3>Solicitar Eliminación Ahora</h3>
          <p>Envía un correo a <a href="mailto:hola@crexative.com?subject=Solicitud%20de%20Eliminación%20de%20Datos">hola@crexative.com</a> con el asunto "Solicitud de Eliminación de Datos"</p>
          <a href="mailto:hola@crexative.com?subject=Solicitud%20de%20Eliminación%20de%20Datos" class="btn-cta">Enviar Solicitud</a>
        </div>

        <div class="back-home">
          <a href="/" class="btn-back">{t('legal.backToHome')}</a>
        </div>
      </article>
    </div>
  </main>

  <Footer lang={lang} />
</Layout>

<style>
  .legal-page {
    padding: 120px 0 60px;
    min-height: 100vh;
    background-color: var(--bg-color);
  }

  .legal-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .legal-header {
    text-align: center;
    margin-bottom: 40px;
    padding-bottom: 30px;
    border-bottom: 1px solid var(--border-color);
  }

  .legal-header h1 {
    color: var(--text-color);
    margin-bottom: 15px;
  }

  .last-updated {
    color: var(--text-gray);
    font-size: 14px;
  }

  .intro {
    font-size: 18px;
    line-height: 1.8;
    color: var(--text-secondary);
    margin-bottom: 40px;
    padding: 20px;
    background-color: var(--bg-secondary);
    border-radius: 8px;
    border-left: 4px solid var(--primary-color);
  }

  .legal-section {
    margin-bottom: 35px;
  }

  .legal-section h2 {
    font-size: 1.4rem;
    color: var(--text-color);
    margin-bottom: 15px;
    font-family: 'Inter', sans-serif;
    font-weight: 600;
  }

  .legal-section p {
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 15px;
  }

  .legal-section ul,
  .legal-section ol {
    margin: 15px 0;
    padding-left: 25px;
  }

  .legal-section li {
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 10px;
  }

  .steps-list {
    background-color: var(--bg-secondary);
    padding: 25px 25px 25px 45px;
    border-radius: 8px;
  }

  .steps-list li {
    padding: 8px 0;
    border-bottom: 1px solid var(--border-color);
  }

  .steps-list li:last-child {
    border-bottom: none;
  }

  .info-box {
    background-color: var(--bg-tertiary);
    padding: 25px;
    border-radius: 8px;
    border: 1px solid var(--border-color);
  }

  .contact-info {
    font-weight: 500;
    color: var(--primary-color) !important;
  }

  .cta-box {
    text-align: center;
    padding: 40px;
    background: var(--gradient-primary);
    border-radius: 12px;
    margin: 40px 0;
  }

  .cta-box h3 {
    color: #000;
    font-size: 1.5rem;
    margin-bottom: 15px;
    font-family: 'Inter', sans-serif;
  }

  .cta-box p {
    color: #000;
    margin-bottom: 20px;
  }

  .cta-box a {
    color: #000;
    font-weight: 600;
  }

  .btn-cta {
    display: inline-block;
    padding: 14px 35px;
    background-color: #000;
    color: var(--primary-color) !important;
    font-weight: 600;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .btn-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  .back-home {
    text-align: center;
    margin-top: 50px;
    padding-top: 30px;
    border-top: 1px solid var(--border-color);
  }

  .btn-back {
    display: inline-block;
    padding: 12px 30px;
    background-color: var(--primary-color);
    color: #000;
    font-weight: 600;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .btn-back:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 225, 199, 0.3);
  }

  @media (max-width: 768px) {
    .legal-page {
      padding: 100px 0 40px;
    }

    .legal-header h1 {
      font-size: 1.8rem;
    }

    .intro {
      font-size: 16px;
    }

    .legal-section h2 {
      font-size: 1.2rem;
    }

    .cta-box {
      padding: 30px 20px;
    }
  }
</style>
