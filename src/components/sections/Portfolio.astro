---
const projects = [
  {
    id: 1,
    title: "E-commerce Website",
    category: "Web Development",
    description: "Responsive e-commerce website with shopping cart and payment integration",
    image: "/images/portfolio/ecommerce.jpg",
    technologies: ["HTML", "CSS", "JavaScript"],
    link: "#"
  },
  {
    id: 2,
    title: "Business Landing Page",
    category: "Web Development",
    description: "Professional landing page with modern design and call-to-action optimization",
    image: "/images/portfolio/landing.jpg",
    technologies: ["React", "CSS3", "Responsive"],
    link: "#"
  },
  {
    id: 3,
    title: "Mobile App UI Design",
    category: "UI/UX Design",
    description: "Clean and intuitive mobile app interface design with user-friendly navigation",
    image: "/images/portfolio/mobile-ui.jpg",
    technologies: ["Figma", "Adobe XD", "Prototyping"],
    link: "#"
  },
  {
    id: 4,
    title: "Logo & Brand Design",
    category: "Visual Design",
    description: "Complete brand identity package including logo, colors, and style guide",
    image: "/images/portfolio/branding.jpg",
    technologies: ["Adobe Illustrator", "Photoshop"],
    link: "#"
  }
];
---

<section id="portfolio" class="portfolio" itemscope itemtype="https://schema.org/CreativeWork">
  <div class="container">
    <div class="section-header">
      <p class="subtitle">OUR WORK</p>
      <h2>FEATURED <span class="primary-color">PROJECTS</span></h2>
      <p class="section-description">
        Here are some examples of the types of projects we can create for you. Each project is crafted with attention to detail and modern design principles.
      </p>
    </div>
    
    <div class="portfolio-filters">
      <button class="filter-btn active" data-filter="all">All Projects</button>
      <button class="filter-btn" data-filter="web">Web Development</button>
      <button class="filter-btn" data-filter="mobile">Mobile Apps</button>
      <button class="filter-btn" data-filter="design">Design</button>
    </div>
    
    <div class="portfolio-grid">
      {projects.map((project) => (
        <article class="portfolio-item" data-category={project.category.toLowerCase().replace(/\s+/g, '-')} itemscope itemtype="https://schema.org/CreativeWork">
          <div class="project-image">
            <img 
              src={project.image} 
              alt={project.title}
              width="400"
              height="300"
              loading="lazy"
              itemprop="image"
            />
            <div class="project-overlay">
              <div class="project-content">
                <h3 itemprop="name">{project.title}</h3>
                <p class="project-category">{project.category}</p>
                <p class="project-description" itemprop="description">{project.description}</p>
                <div class="project-tech">
                  {project.technologies.map((tech) => (
                    <span class="tech-tag">{tech}</span>
                  ))}
                </div>
                <a href={project.link} class="project-link" aria-label={`View ${project.title} project`}>
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                    <polyline points="15,3 21,3 21,9"></polyline>
                    <line x1="10" y1="14" x2="21" y2="3"></line>
                  </svg>
                  View Project
                </a>
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>
    
    <div class="portfolio-cta">
      <p>Ready to start your project?</p>
      <a href="#contact" class="btn btn-outline">Get Started Today</a>
    </div>
  </div>
</section>

<style>
  .portfolio {
    padding: 120px 0;
    background: linear-gradient(180deg, var(--bg-color) 0%, var(--bg-secondary) 100%);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .subtitle {
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 3px;
    margin-bottom: 16px;
    color: var(--primary-color);
    font-family: 'Inter', sans-serif;
  }
  
  .section-description {
    max-width: 600px;
    margin: 20px auto 0;
    font-size: 18px;
    line-height: 1.7;
    color: var(--text-gray);
  }
  
  .portfolio-filters {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-bottom: 60px;
    flex-wrap: wrap;
  }
  
  .filter-btn {
    padding: 12px 24px;
    border: 2px solid var(--border-color);
    background: transparent;
    color: var(--text-gray);
    border-radius: 50px;
    font-weight: 500;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-family: 'Inter', sans-serif;
  }
  
  .filter-btn:hover,
  .filter-btn.active {
    background: var(--gradient-primary);
    border-color: transparent;
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 40px;
    margin-bottom: 80px;
  }
  
  .portfolio-item {
    border-radius: 20px;
    overflow: hidden;
    background: white;
    box-shadow: var(--shadow-md);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }
  
  .portfolio-item:hover {
    transform: translateY(-12px);
    box-shadow: var(--shadow-xl);
  }
  
  .project-image {
    position: relative;
    height: 280px;
    overflow: hidden;
  }
  
  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .portfolio-item:hover .project-image img {
    transform: scale(1.1);
  }
  
  .project-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 225, 199, 0.95) 0%, rgba(99, 102, 241, 0.95) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 30px;
  }
  
  .portfolio-item:hover .project-overlay {
    opacity: 1;
  }
  
  .project-content {
    text-align: center;
    color: white;
    transform: translateY(20px);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .portfolio-item:hover .project-content {
    transform: translateY(0);
  }
  
  .project-content h3 {
    font-size: 24px;
    margin-bottom: 8px;
    color: white;
  }
  
  .project-category {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
    opacity: 0.9;
    font-weight: 500;
  }
  
  .project-description {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 20px;
    opacity: 0.95;
  }
  
  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    justify-content: center;
    margin-bottom: 24px;
  }
  
  .tech-tag {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
    backdrop-filter: blur(10px);
  }
  
  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: white;
    text-decoration: none;
    font-weight: 600;
    padding: 12px 24px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50px;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }
  
  .project-link:hover {
    background: white;
    color: var(--primary-color);
    border-color: white;
    transform: scale(1.05);
  }
  
  .portfolio-cta {
    text-align: center;
    padding: 60px 40px;
    background: white;
    border-radius: 20px;
    box-shadow: var(--shadow-lg);
  }
  
  .portfolio-cta p {
    font-size: 20px;
    margin-bottom: 24px;
    color: var(--text-secondary);
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    padding: 16px 32px;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-size: 16px;
    cursor: pointer;
  }
  
  .btn-outline {
    background: transparent;
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
  }
  
  .btn-outline:hover {
    background: var(--primary-color);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  @media (max-width: 768px) {
    .portfolio {
      padding: 80px 0;
    }
    
    .portfolio-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    .portfolio-filters {
      gap: 12px;
      margin-bottom: 40px;
    }
    
    .filter-btn {
      padding: 10px 20px;
      font-size: 13px;
    }
    
    .portfolio-cta {
      padding: 40px 20px;
    }
  }
</style>

<script>
  // Portfolio filtering functionality
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const portfolioItems = document.querySelectorAll('.portfolio-item');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active class from all buttons
        filterButtons.forEach(btn => btn.classList.remove('active'));
        // Add active class to clicked button
        button.classList.add('active');
        
        const filter = button.getAttribute('data-filter');
        
        portfolioItems.forEach(item => {
          const category = item.getAttribute('data-category');
          
          if (filter === 'all' || 
              (filter === 'web' && category.includes('web')) ||
              (filter === 'mobile' && category.includes('mobile')) ||
              (filter === 'design' && (category.includes('ui') || category.includes('visual')))) {
            item.style.display = 'block';
            item.style.animation = 'fadeInUp 0.6s ease forwards';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  });
</script>