---
import { useTranslations } from '../../i18n';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');

const services = [
  {
    number: '01',
    name: t('services.automation.title'),
    description: t('services.automation.description'),
    icon: '/images/icons/service-automation.svg',
    techTags: ['n8n', 'AI', 'MCP', 'Zapier', 'Make']
  },
  {
    number: '02',
    name: t('services.web.title'),
    description: t('services.web.description'),
    icon: '/images/icons/service-web.svg',
    techTags: ['React', 'Node.js', 'TypeScript']
  },
  {
    number: '03',
    name: t('services.mobile.title'),
    description: t('services.mobile.description'),
    icon: '/images/icons/service-mobile.svg',
    techTags: ['Kotlin Multiplatform', 'iOS', 'Android']
  },
  {
    number: '04',
    name: t('services.custom.title'),
    description: t('services.custom.description'),
    icon: '/images/icons/service-custom.svg',
    techTags: ['API', 'Cloud', 'DevOps']
  }
];

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  provider: {
    '@type': 'Organization',
    name: 'CREXATIVE',
    url: 'https://crexative.com'
  },
  serviceType: 'Software Development',
  offers: services.map(service => ({
    '@type': 'Offer',
    name: service.name,
    description: service.description,
    category: 'Software Development'
  }))
};
---

<section id="services" class="services" itemscope itemtype="https://schema.org/Organization">
  <div class="container">
    <div class="section-header">
      <div class="header-eyebrow">
        <span class="eyebrow-bar" aria-hidden="true"></span>
        <span class="eyebrow-text">{t('services.title')}</span>
      </div>
      <h2>{t('services.subtitle')}</h2>
    </div>

    <div class="services-grid" itemprop="makesOffer" itemscope itemtype="https://schema.org/Offer">
      {services.map((service, index) => (
        <article class="service-card" itemscope itemtype="https://schema.org/Service">
          <div class="card-number" aria-hidden="true">{service.number}</div>
          <div class="card-icon-wrap">
            <img
              src={service.icon}
              alt={service.name}
              width="56"
              height="56"
              decoding="async"
              loading={index > 1 ? 'lazy' : undefined}
            />
          </div>
          <div class="card-body">
            <h3 itemprop="name">{service.name}</h3>
            <p itemprop="description">{service.description}</p>
            <div class="service-tags">
              {service.techTags.map(tag => (
                <span class="tag-pill">{tag}</span>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>

  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} is:inline />
</section>

<style>
  .services {
    padding: 120px 0;
    background-color: var(--bg-color);
    position: relative;
  }

  /* ─── Section header ─────────────────────────────────────── */
  .section-header {
    text-align: center;
    margin-bottom: 72px;
  }

  .header-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 14px;
    font-family: 'Poppins', sans-serif;
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: var(--text-gray);
    margin-bottom: 20px;
  }

  .eyebrow-bar {
    display: block;
    width: 28px;
    height: 1px;
    background: var(--color-lime);
    flex-shrink: 0;
  }

  h2 {
    font-family: 'Syne', 'Poppins', sans-serif;
    font-size: 52px;
    line-height: 1.06;
    font-weight: 800;
    letter-spacing: -0.03em;
    color: var(--text-color);
  }

  /* ─── Grid ───────────────────────────────────────────────── */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  /* ─── Card ───────────────────────────────────────────────── */
  .service-card {
    position: relative;
    background-color: var(--bg-secondary);
    border-radius: 16px;
    padding: 44px 40px;
    border: 1px solid var(--border-color);
    overflow: hidden;
    transition: border-color 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
  }

  .service-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 0% 0%, rgba(0,225,198,0.05) 0%, transparent 60%);
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: inherit;
  }

  .service-card:hover {
    border-color: rgba(0,225,198,0.3);
    transform: translateY(-4px);
    box-shadow:
      0 0 0 1px rgba(0,225,198,0.1),
      0 24px 48px rgba(0,0,0,0.2);
  }

  .service-card:hover::before {
    opacity: 1;
  }

  /* Background number */
  .card-number {
    position: absolute;
    top: 16px;
    right: 24px;
    font-family: 'Syne', 'Poppins', sans-serif;
    font-weight: 800;
    font-size: 72px;
    line-height: 1;
    color: rgba(255,255,255,0.025);
    letter-spacing: -0.04em;
    user-select: none;
    pointer-events: none;
  }

  :global([data-theme="light"]) .card-number {
    color: rgba(0,0,0,0.04);
  }

  /* Icon */
  .card-icon-wrap {
    width: 64px;
    height: 64px;
    background: var(--icon-bg);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 28px;
    position: relative;
    z-index: 1;
  }

  .card-icon-wrap img {
    width: 36px;
    height: 36px;
    object-fit: contain;
  }

  /* Card body */
  .card-body {
    display: flex;
    flex-direction: column;
    gap: 14px;
    position: relative;
    z-index: 1;
  }

  h3 {
    font-family: 'Syne', 'Poppins', sans-serif;
    font-size: 24px;
    line-height: 1.2;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--text-color);
    margin: 0;
  }

  .service-card p {
    color: var(--text-color);
    font-family: 'Poppins', sans-serif;
    font-size: 15px;
    line-height: 1.7;
    font-weight: 300;
    margin: 0;
    opacity: 0.75;
  }

  /* Tags */
  .service-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 8px;
  }

  .tag-pill {
    background: transparent;
    color: var(--text-color);
    padding: 6px 14px;
    border-radius: 100px;
    font-family: 'Poppins', sans-serif;
    font-size: 12px;
    line-height: 1;
    font-weight: 500;
    letter-spacing: 0.02em;
    border: 1px solid var(--border-color);
    opacity: 0.7;
    transition: opacity 0.2s ease, border-color 0.2s ease, color 0.2s ease;
  }

  .service-card:hover .tag-pill {
    opacity: 1;
    border-color: rgba(0,225,198,0.35);
    color: var(--color-cyan);
  }

  /* ─── Responsive ──────────────────────────────────────────── */
  @media (max-width: 1024px) {
    h2 { font-size: 44px; }
  }

  @media (max-width: 768px) {
    .services {
      padding: 80px 0;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    h2 {
      font-size: 36px;
    }

    .service-card {
      padding: 36px 28px;
    }

    .section-header {
      margin-bottom: 48px;
    }
  }

  @media (max-width: 480px) {
    .services {
      padding: 60px 0;
    }

    h2 {
      font-size: 30px;
    }

    .service-card {
      padding: 28px 20px;
    }

    h3 { font-size: 20px; }

    .service-card p { font-size: 14px; }
  }
</style>
