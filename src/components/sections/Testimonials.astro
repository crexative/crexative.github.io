---
interface Props {
  lang?: string;
}

const { lang = 'es' } = Astro.props;

const testimonials = [
  {
    id: 1,
    name: "Sarah Johnson",
    position: "CEO",
    company: "TechStart Inc",
    image: "/images/testimonials/sarah.jpg",
    content: "CREXATIVE transformed our vision into a stunning mobile app that exceeded all expectations. Their attention to detail and user experience is unmatched.",
    rating: 5,
    project: "Mobile App Development"
  },
  {
    id: 2,
    name: "Michael Chen",
    position: "Product Manager",
    company: "InnovateCorp",
    image: "/images/testimonials/michael.jpg",
    content: "Working with CREXATIVE was a game-changer for our e-commerce platform. They delivered a scalable solution that boosted our conversion rates by 40%.",
    rating: 5,
    project: "E-commerce Platform"
  },
  {
    id: 3,
    name: "Emma Rodriguez",
    position: "Marketing Director",
    company: "GrowthLab",
    image: "/images/testimonials/emma.jpg",
    content: "The team's creativity and technical expertise helped us create a brand identity that truly resonates with our target audience. Highly recommended!",
    rating: 5,
    project: "Brand Identity & Web Design"
  },
  {
    id: 4,
    name: "David Park",
    position: "Founder",
    company: "FinTech Solutions",
    image: "/images/testimonials/david.jpg",
    content: "CREXATIVE delivered our complex financial dashboard ahead of schedule. Their code quality and security implementation were exceptional.",
    rating: 5,
    project: "SaaS Dashboard Development"
  }
];

const heading = lang === 'es'
  ? { label: 'Testimonios', title: 'Lo que dicen nuestros', accent: 'clientes' }
  : { label: 'Testimonials', title: 'What our', accent: 'clients say' };
---

<section class="testimonials" itemscope itemtype="https://schema.org/Organization">
  <div class="container">
    <div class="section-header">
      <div class="header-eyebrow">
        <span class="eyebrow-bar" aria-hidden="true"></span>
        <span class="eyebrow-text">{heading.label}</span>
      </div>
      <h2>
        {heading.title} <em class="accent-em">{heading.accent}</em>
      </h2>
    </div>

    <div class="testimonials-slider">
      <div class="testimonials-track" id="testimonialsTrack">
        {testimonials.map((testimonial) => (
          <article class="testimonial-card" itemscope itemtype="https://schema.org/Review">
            <!-- Quote mark decoration -->
            <div class="quote-mark" aria-hidden="true">"</div>

            <!-- Star rating -->
            <div class="rating" itemprop="reviewRating" itemscope itemtype="https://schema.org/Rating">
              <meta itemprop="ratingValue" content={testimonial.rating} />
              <meta itemprop="bestRating" content="5" />
              {Array.from({ length: 5 }, (_, i) => (
                <svg
                  class={`star ${i < testimonial.rating ? 'filled' : ''}`}
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  aria-hidden="true"
                >
                  <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26 12,2"></polygon>
                </svg>
              ))}
            </div>

            <!-- Quote -->
            <blockquote itemprop="reviewBody">
              {testimonial.content}
            </blockquote>

            <!-- Project tag -->
            <div class="project-tag">
              <span class="project-dot" aria-hidden="true"></span>
              <span class="project-name">{testimonial.project}</span>
            </div>

            <!-- Author -->
            <div class="testimonial-author" itemprop="author" itemscope itemtype="https://schema.org/Person">
              <div class="author-avatar" aria-hidden="true">
                {testimonial.name.charAt(0)}
              </div>
              <div class="author-info">
                <span class="author-name" itemprop="name">{testimonial.name}</span>
                <span class="author-role">
                  <span itemprop="jobTitle">{testimonial.position}</span>
                  {' · '}
                  <span class="author-company" itemprop="worksFor">{testimonial.company}</span>
                </span>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Controls -->
      <div class="slider-controls">
        <button class="slider-btn prev" id="prevBtn" aria-label={lang === 'es' ? 'Anterior' : 'Previous'}>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15,18 9,12 15,6"></polyline>
          </svg>
        </button>
        <div class="slider-dots" id="sliderDots">
          {testimonials.map((_, index) => (
            <button class={`dot ${index === 0 ? 'active' : ''}`} data-slide={index} aria-label={`${lang === 'es' ? 'Testimonial' : 'Testimonial'} ${index + 1}`}></button>
          ))}
        </div>
        <button class="slider-btn next" id="nextBtn" aria-label={lang === 'es' ? 'Siguiente' : 'Next'}>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9,18 15,12 9,6"></polyline>
          </svg>
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const track = document.getElementById('testimonialsTrack') as HTMLElement;
    const prevBtn = document.getElementById('prevBtn') as HTMLButtonElement;
    const nextBtn = document.getElementById('nextBtn') as HTMLButtonElement;
    const dots = document.querySelectorAll('.dot');

    let currentSlide = 0;
    const totalSlides = dots.length;

    function updateSlider() {
      const translateX = -currentSlide * 100;
      track.style.transform = `translateX(${translateX}%)`;
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentSlide);
      });
    }

    function nextSlide() {
      currentSlide = (currentSlide + 1) % totalSlides;
      updateSlider();
    }

    function prevSlide() {
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
      updateSlider();
    }

    nextBtn.addEventListener('click', nextSlide);
    prevBtn.addEventListener('click', prevSlide);

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentSlide = index;
        updateSlider();
      });
    });

    setInterval(nextSlide, 7000);
  });
</script>

<style>
  /* ─── Section shell ──────────────────────────────────────── */
  .testimonials {
    padding: 120px 0;
    background: var(--bg-secondary);
  }

  /* ─── Section header ─────────────────────────────────────── */
  .section-header {
    text-align: center;
    margin-bottom: 64px;
  }

  .header-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 14px;
    font-family: 'Poppins', sans-serif;
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: var(--text-gray);
    margin-bottom: 20px;
  }

  .eyebrow-bar {
    display: block;
    width: 28px;
    height: 1px;
    background: var(--color-lime);
    flex-shrink: 0;
  }

  h2 {
    font-family: 'Syne', 'Poppins', sans-serif;
    font-size: 52px;
    line-height: 1.06;
    font-weight: 800;
    letter-spacing: -0.03em;
    color: var(--text-color);
  }

  .accent-em {
    font-style: italic;
    color: var(--color-lime);
  }

  /* ─── Slider ─────────────────────────────────────────────── */
  .testimonials-slider {
    position: relative;
    max-width: 760px;
    margin: 0 auto;
    overflow: hidden;
  }

  .testimonials-track {
    display: flex;
    transition: transform 0.55s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* ─── Card ───────────────────────────────────────────────── */
  .testimonial-card {
    min-width: 100%;
    background: var(--bg-color);
    border-radius: 20px;
    padding: 44px 48px;
    border: 1px solid var(--border-color);
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
  }

  /* Large background quote mark */
  .quote-mark {
    position: absolute;
    top: -16px;
    left: 36px;
    font-family: 'Syne', serif;
    font-size: 160px;
    font-weight: 800;
    line-height: 1;
    color: var(--color-lime);
    opacity: 0.08;
    user-select: none;
    pointer-events: none;
  }

  /* ─── Rating ─────────────────────────────────────────────── */
  .rating {
    display: flex;
    gap: 3px;
    margin-bottom: 24px;
    position: relative;
  }

  .star {
    color: rgba(204, 254, 18, 0.2);
  }

  .star.filled {
    color: var(--color-lime);
    fill: var(--color-lime);
  }

  /* ─── Quote ──────────────────────────────────────────────── */
  blockquote {
    font-family: 'Poppins', sans-serif;
    font-size: 19px;
    line-height: 1.75;
    color: var(--text-color);
    margin: 0 0 28px 0;
    font-weight: 300;
    position: relative;
    opacity: 0.9;
  }

  /* ─── Project tag ────────────────────────────────────────── */
  .project-tag {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 32px;
    padding: 7px 14px;
    background: var(--bg-secondary);
    border-radius: 100px;
    border: 1px solid var(--border-color);
  }

  .project-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--color-cyan);
    flex-shrink: 0;
  }

  .project-name {
    font-family: 'Poppins', sans-serif;
    font-size: 12px;
    color: var(--color-cyan);
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  /* ─── Author ─────────────────────────────────────────────── */
  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 16px;
    border-top: 1px solid var(--border-color);
    padding-top: 28px;
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-cyan), var(--color-lime));
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Syne', 'Poppins', sans-serif;
    font-weight: 800;
    font-size: 18px;
    color: #000;
    flex-shrink: 0;
  }

  .author-name {
    display: block;
    font-family: 'Syne', 'Poppins', sans-serif;
    font-size: 16px;
    font-weight: 700;
    color: var(--text-color);
    letter-spacing: -0.01em;
    margin-bottom: 3px;
  }

  .author-role {
    font-family: 'Poppins', sans-serif;
    font-size: 13px;
    color: var(--text-gray);
    font-weight: 400;
  }

  .author-company {
    color: var(--color-cyan);
    font-weight: 500;
  }

  /* ─── Controls ───────────────────────────────────────────── */
  .slider-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-top: 36px;
  }

  .slider-btn {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid var(--border-color);
    background: var(--bg-secondary);
    color: var(--text-gray);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.25s ease;
    flex-shrink: 0;
  }

  .slider-btn:hover {
    background: var(--color-lime);
    border-color: var(--color-lime);
    color: #000;
    transform: translateY(-2px);
  }

  .slider-dots {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    border: none;
    background: var(--border-color);
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .dot.active {
    background: var(--color-lime);
    width: 20px;
    border-radius: 3px;
  }

  /* ─── Responsive ──────────────────────────────────────────── */
  @media (max-width: 768px) {
    .testimonials {
      padding: 80px 0;
    }

    h2 {
      font-size: 36px;
    }

    .testimonial-card {
      padding: 36px 28px;
    }

    blockquote {
      font-size: 17px;
    }

    .section-header {
      margin-bottom: 48px;
    }
  }

  @media (max-width: 480px) {
    .testimonials {
      padding: 60px 0;
    }

    h2 {
      font-size: 30px;
    }

    .testimonial-card {
      padding: 28px 20px;
    }

    blockquote {
      font-size: 15px;
    }

    .quote-mark {
      font-size: 120px;
    }
  }
</style>
