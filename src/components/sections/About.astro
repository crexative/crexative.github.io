---
import { useTranslations } from '../../i18n';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');
---

<section id="about" class="about" itemscope itemtype="https://schema.org/Organization">
  <div class="container">
    <div class="section-header">
      <p class="subtitle">{t('about.title')}</p>
      <h2>{t('about.subtitle')}</h2>
    </div>

    <div class="about-content">
      <div class="about-image">
        <img
          src="/images/about.png"
          alt={lang === 'es' ? 'Equipo de desarrollo de software CREXATIVE trabajando en proyectos innovadores' : 'CREXATIVE software development team working on innovative projects'}
          width="600"
          height="450"
          loading="lazy"
          itemprop="image"
        />
      </div>

      <div class="about-text">
        <p class="about-description" itemprop="description">
          {t('about.description')}
        </p>

        <div class="company-values">
          <div class="value-item">
            <div class="value-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2v4"/>
                <path d="m6.41 6.41 2.83 2.83"/>
                <path d="M2 12h4"/>
                <path d="m6.41 17.59 2.83-2.83"/>
                <path d="M12 18v4"/>
                <path d="m17.59 17.59-2.83-2.83"/>
                <path d="M18 12h4"/>
                <path d="m17.59 6.41-2.83 2.83"/>
              </svg>
            </div>
            <div class="value-content">
              <h4>{t('about.values.innovation')}</h4>
              <p>{t('about.values.innovationDesc')}</p>
            </div>
          </div>

          <div class="value-item">
            <div class="value-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
              </svg>
            </div>
            <div class="value-content">
              <h4>{t('about.values.quality')}</h4>
              <p>{t('about.values.qualityDesc')}</p>
            </div>
          </div>

          <div class="value-item">
            <div class="value-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
            </div>
            <div class="value-content">
              <h4>{t('about.values.partnership')}</h4>
              <p>{t('about.values.partnershipDesc')}</p>
            </div>
          </div>
        </div>

        <!-- Featured card -->
        <div class="featured-card">
          <div class="featured-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
            </svg>
          </div>
          <div class="featured-content">
            <h4>{t('about.featured.title')}</h4>
            <p>{t('about.featured.description')}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    padding: 100px 0;
    background-color: var(--bg-color);
  }

  :global([data-theme="dark"]) .about {
    background-color: #0a0a0a;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .subtitle {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 16px;
    color: var(--text-gray);
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
  }

  h2 {
    font-size: 44px;
    line-height: 56px;
    font-weight: 600;
    color: var(--text-color);
    font-family: 'Poppins', sans-serif;
    font-style: italic;
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  .about-image {
    border-radius: 16px;
    overflow: hidden;
    position: relative;
  }

  .about-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .about-text {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .about-description {
    color: var(--text-color);
    line-height: 28px;
    font-size: 16px;
    font-family: 'Poppins', sans-serif;
    font-weight: 300;
    margin: 0;
    opacity: 0.9;
  }

  .company-values {
    display: flex;
    flex-direction: column;
    gap: 24px;
    padding-top: 16px;
    border-top: 1px solid var(--border-color);
  }

  .value-item {
    display: flex;
    align-items: flex-start;
    gap: 16px;
  }

  .value-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    background: rgba(0, 225, 198, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-cyan);
  }

  :global([data-theme="dark"]) .value-icon {
    background: rgba(0, 225, 198, 0.15);
  }

  .value-content h4 {
    font-size: 16px;
    font-weight: 500;
    margin: 0 0 6px 0;
    color: var(--text-color);
    font-family: 'Poppins', sans-serif;
  }

  .value-content p {
    font-size: 14px;
    color: var(--text-gray);
    margin: 0;
    line-height: 22px;
    font-family: 'Poppins', sans-serif;
    font-weight: 300;
  }

  /* Featured card */
  .featured-card {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    padding: 24px;
    background: rgba(0, 225, 198, 0.08);
    border-radius: 16px;
    border: 1px solid rgba(0, 225, 198, 0.2);
    margin-top: 8px;
  }

  :global([data-theme="dark"]) .featured-card {
    background: rgba(0, 225, 198, 0.1);
    border-color: rgba(0, 225, 198, 0.25);
  }

  .featured-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    background: var(--color-cyan);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000000;
  }

  .featured-content h4 {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px 0;
    color: var(--text-color);
    font-family: 'Poppins', sans-serif;
  }

  .featured-content p {
    font-size: 14px;
    color: var(--text-gray);
    margin: 0;
    line-height: 22px;
    font-family: 'Poppins', sans-serif;
    font-weight: 300;
  }

  @media (max-width: 1024px) {
    .about-content {
      gap: 40px;
    }

    h2 {
      font-size: 36px;
      line-height: 48px;
    }
  }

  @media (max-width: 768px) {
    .about {
      padding: 80px 0;
    }

    .about-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    h2 {
      font-size: 32px;
      line-height: 44px;
    }

    .about-description {
      font-size: 15px;
      line-height: 26px;
    }

    .company-values {
      gap: 20px;
    }

    .value-icon,
    .featured-icon {
      width: 44px;
      height: 44px;
    }

    .featured-card {
      padding: 20px;
    }
  }

  @media (max-width: 480px) {
    .about {
      padding: 60px 0;
    }

    h2 {
      font-size: 28px;
      line-height: 38px;
    }

    .about-text {
      gap: 24px;
    }

    .about-description {
      font-size: 14px;
      line-height: 24px;
    }

    .value-icon,
    .featured-icon {
      width: 40px;
      height: 40px;
    }

    .value-icon svg,
    .featured-icon svg {
      width: 20px;
      height: 20px;
    }

    .value-content h4,
    .featured-content h4 {
      font-size: 15px;
    }

    .value-content p,
    .featured-content p {
      font-size: 13px;
    }

    .featured-card {
      padding: 16px;
      gap: 12px;
    }
  }
</style>
