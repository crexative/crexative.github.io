<style>
  .about {
    padding: 100px 0;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .subtitle {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 15px;
    color: var(--text-gray);
  }
  
  h2 {
    font-size: 42px;
    font-weight: 700;
    margin-bottom: 20px;
  }
  
  .about-content {
    display: flex;
    gap: 50px;
    align-items: center;
  }
  
  .about-image {
    flex: 1;
    border-radius: 10px;
    overflow: hidden;
  }
  
  .about-image img {
    width: 100%;
    height: auto;
    display: block;
    filter: grayscale(0.5) contrast(1.1);
  }
  
  .about-text {
    flex: 1;
  }
  
  .about-text p {
    color: var(--text-gray);
    line-height: 1.8;
    margin-bottom: 30px;
    font-size: 16px;
  }
  
  .company-values {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin: 30px 0;
    padding: 25px 0;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
  }

  .value-item {
    display: flex;
    align-items: flex-start;
    gap: 15px;
  }

  .value-icon {
    font-size: 24px;
    flex-shrink: 0;
  }

  .value-content h4 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 5px;
    color: var(--text-color);
    font-family: 'Inter', sans-serif;
  }

  .value-content p {
    font-size: 14px;
    color: var(--text-gray);
    margin: 0;
    line-height: 1.5;
  }
  
  .features {
    display: flex;
    flex-direction: column;
    gap: 25px;
  }
  
  .feature {
    display: flex;
    gap: 20px;
    align-items: flex-start;
    padding: 20px;
    background-color: rgba(0, 225, 199, 0.02);
    border-radius: 10px;
    border-left: 3px solid var(--primary-color);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .feature:hover {
    transform: translateX(5px);
    box-shadow: 0 5px 15px rgba(0, 225, 199, 0.1);
  }
  
  .feature-icon {
    color: var(--primary-color);
    background-color: rgba(0, 225, 199, 0.1);
    padding: 12px;
    border-radius: 10px;
    flex-shrink: 0;
  }
  
  .feature-text h3 {
    font-size: 18px;
    margin-bottom: 8px;
    color: var(--text-color);
    font-weight: 600;
  }
  
  .feature-text p {
    color: var(--text-gray);
    font-size: 15px;
    margin: 0;
    line-height: 1.6;
  }
  
  @media (max-width: 768px) {
    .about {
      padding: 80px 0;
    }

    .about-content {
      flex-direction: column;
      gap: 30px;
    }
    
    h2 {
      font-size: 32px;
    }

    .about-text p {
      font-size: 15px;
    }

    .company-values {
      gap: 15px;
      margin: 25px 0;
      padding: 20px 0;
    }

    .value-item {
      gap: 12px;
    }

    .value-content h4 {
      font-size: 15px;
    }

    .value-content p {
      font-size: 13px;
    }

    .feature {
      padding: 15px;
    }

    .feature-text h3 {
      font-size: 16px;
    }

    .feature-text p {
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    .about {
      padding: 60px 0;
    }

    .about-content {
      gap: 25px;
    }

    h2 {
      font-size: 28px;
    }

    .about-text p {
      font-size: 14px;
    }

    .company-values {
      padding: 15px 0;
    }

    .feature {
      padding: 12px;
    }
  }
</style>