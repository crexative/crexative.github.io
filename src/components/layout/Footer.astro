---
import { useTranslations } from '../../i18n';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as 'en' | 'es');
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <!-- Brand Column -->
      <div class="footer-brand">
        <a href={lang === 'en' ? '/en' : '/'} class="footer-logo">
          <img src="/images/logo/crexative.svg" alt="CREXATIVE" class="footer-logo-image" width="140" height="32" loading="lazy" />
        </a>
        <p class="footer-tagline">{t('footer.description')}</p>
        <div class="footer-social">
          <a href={t('social.linkedin')} class="social-icon" aria-label={t('footer.social.linkedin')} target="_blank" rel="noopener noreferrer">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
          <a href={t('social.twitter')} class="social-icon" aria-label={t('footer.social.twitter')} target="_blank" rel="noopener noreferrer">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
            </svg>
          </a>
          <a href={t('social.instagram')} class="social-icon" aria-label={t('footer.social.instagram')} target="_blank" rel="noopener noreferrer">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
        </div>
      </div>

      <!-- Navigation Column -->
      <div class="footer-nav">
        <h3>{t('footer.sections.company')}</h3>
        <ul>
          <li><a href={lang === 'en' ? '/en' : '/'}>{t('footer.links.home')}</a></li>
          <li><a href="#services">{t('footer.links.services')}</a></li>
          <li><a href="#about">{t('footer.links.about')}</a></li>
          <li><a href="#contact">{t('footer.links.contact')}</a></li>
        </ul>
      </div>

      <!-- Services Column -->
      <div class="footer-nav">
        <h3>{t('footer.sections.services')}</h3>
        <ul>
          <li><a href="#services">{t('footer.servicesList.automation')}</a></li>
          <li><a href="#services">{t('footer.servicesList.web')}</a></li>
          <li><a href="#services">{t('footer.servicesList.mobile')}</a></li>
          <li><a href="#services">{t('footer.servicesList.custom')}</a></li>
        </ul>
      </div>

      <!-- Contact Column -->
      <div class="footer-nav">
        <h3>{t('footer.sections.contact')}</h3>
        <ul>
          <li><a href={`mailto:${t('contact.details.email')}`}>{t('contact.details.email')}</a></li>
          <li><span>{t('contact.details.address')}</span></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-content">
        <p class="copyright">&copy; {currentYear} CREXATIVE. {t('footer.copyright')}</p>
        <div class="footer-legal">
          <a href="/privacidad/">{t('footer.links.privacy')}</a>
          <a href="/terminos/">{t('footer.links.terms')}</a>
          <a href="/eliminar-datos/">{lang === 'es' ? 'Eliminaci√≥n de Datos' : 'Data Deletion'}</a>
        </div>
        <p class="made-with">{t('footer.madeWith')}</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-gray-900);
  }

  .footer .container {
    padding-top: 60px;
    padding-bottom: 60px;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 60px;
  }

  /* Brand Column */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .footer-logo {
    display: inline-block;
    text-decoration: none;
  }

  .footer-logo-image {
    height: 36px;
    width: auto;
  }

  .footer-tagline {
    font-size: 14px;
    line-height: 24px;
    color: var(--color-gray-400);
    font-family: 'Poppins', sans-serif;
    font-weight: 300;
    max-width: 280px;
    margin: 0;
  }

  .footer-social {
    display: flex;
    gap: 12px;
    margin-top: 8px;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-gray-800);
    color: #ffffff;
    transition: all 0.3s ease;
  }

  .social-icon:hover {
    background-color: var(--color-lime);
    color: #000000;
    transform: translateY(-2px);
  }

  /* Navigation Columns */
  .footer-nav h3 {
    font-family: 'Syne', 'Poppins', sans-serif;
    font-size: 14px;
    font-weight: 700;
    color: #ffffff;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    margin: 0 0 24px 0;
  }

  .footer-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-nav li {
    margin-bottom: 16px;
  }

  .footer-nav li:last-child {
    margin-bottom: 0;
  }

  .footer-nav a {
    color: var(--color-gray-400);
    text-decoration: none;
    font-size: 14px;
    line-height: 20px;
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    transition: color 0.3s ease;
  }

  .footer-nav a:hover {
    color: var(--color-cyan);
  }

  .footer-nav span {
    color: var(--color-gray-400);
    font-size: 14px;
    line-height: 20px;
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
  }

  /* Bottom Bar */
  .footer-bottom {
    background-color: #141414;
    border-top: 1px solid var(--color-gray-800);
  }

  .footer-bottom .container {
    padding-top: 24px;
    padding-bottom: 24px;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }

  .copyright {
    font-size: 13px;
    color: var(--color-gray-500);
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    margin: 0;
  }

  .footer-legal {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .footer-legal a {
    color: var(--color-gray-500);
    font-size: 13px;
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-legal a:hover {
    color: var(--color-cyan);
  }

  .made-with {
    font-size: 13px;
    color: var(--color-cyan);
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
    margin: 0;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
      gap: 40px;
    }

    .footer-brand {
      grid-column: span 2;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .footer .container {
      padding-top: 48px;
      padding-bottom: 48px;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 32px;
      text-align: center;
    }

    .footer-brand {
      grid-column: span 1;
      align-items: center;
    }

    .footer-tagline {
      max-width: 100%;
    }

    .footer-social {
      justify-content: center;
    }

    .footer-nav {
      text-align: center;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 12px;
    }

    .footer-legal {
      flex-wrap: wrap;
      justify-content: center;
      gap: 16px;
    }
  }

  /* Small Mobile */
  @media (max-width: 480px) {
    .footer .container {
      padding-top: 40px;
      padding-bottom: 40px;
    }

    .footer-content {
      gap: 28px;
    }

    .footer-logo-image {
      height: 28px;
    }

    .footer-nav h3 {
      font-size: 13px;
      margin-bottom: 20px;
    }

    .footer-nav li {
      margin-bottom: 12px;
    }

    .footer-bottom .container {
      padding-top: 20px;
      padding-bottom: 20px;
    }

    .copyright,
    .footer-legal a,
    .made-with {
      font-size: 12px;
    }

    .footer-legal {
      gap: 12px;
    }
  }
</style>
